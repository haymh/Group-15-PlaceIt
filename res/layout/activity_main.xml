<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
     android:id="@+id/map"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:name="com.google.android.gms.maps.MapFragment"> 
        <RelativeLayout
            android:id="@+id/linearLayout2" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom">

            <EditText
                android:id="@+id/sendLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="top"
                android:hint="Address or coordnates"
                android:scrollHorizontally="true" >
                <requestFocus />
            </EditText>

            <Button
                android:id="@+id/sendLocationBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/sendLocation"
                android:layout_below="@+id/sendLocation"
                android:text="Goto"
                android:onClick="sendToLocation"/>

            <Button
                android:id="@+id/listPageBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/sendLocationBtn"
                android:layout_alignBottom="@+id/sendLocationBtn"
                android:layout_toRightOf="@+id/sendLocationBtn"
                android:onClick="gotoListPage"
                android:text="List"/>

            <Button
                android:id="@+id/testBtn1"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:text="Test 1" 
                android:onClick="test1"
                />

            <Button
                android:id="@+id/testBtn2"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/testBtn1"
                android:layout_alignParentLeft="true"
                android:text="Test 2" 
                android:onClick="test2"
                />

            <Button
                android:id="@+id/testBtn3"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/testBtn2"
                android:layout_alignParentLeft="true"
                android:text="Test 3" 
                android:onClick="test3"
                />

        </RelativeLayout> 
</fragment>