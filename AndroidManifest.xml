        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyCCqloye59-Ts0Ra9vmzCP26cq5BItNtZ0" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.example.placeit.CreatePlaceItActivity"
            android:label="@string/title_activity_create_place_it" >
        </activity>
        <activity
            android:name="com.example.placeit.PlaceItDetailActivity"
            android:label="@string/title_activity_place_it_detail" >
        </activity>
        
        
        
        <service
            android:name="com.example.placeit.MyService"
            android:enabled="true"
            android:exported="true" >
        </service>
        
    </application>

</manifest>
